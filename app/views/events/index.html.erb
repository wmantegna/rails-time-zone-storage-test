<p id="notice"><%= notice %></p>

<h3><b>Time-Zone:</b> <%= Time.zone %></h3>
<br>
<h1>All Events</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Start</th>
      <th>Time zone</th>
      <th>in_time_zone</th>
      <th>Daylight Savings</th>
      <th>TimeZone & Daylight Savings</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.start %></td>
        <td><%= event.time_zone %></td>
        <td><%= event.in_time_zone_str %></td>
        <td><%= event.handle_daylight_savings %></td>
        <td><%= event.time_zone_and_daylight_savings %></td>
        <td><%= link_to 'Show', event, class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit', edit_event_path(event), class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Event', new_event_path, class: 'btn btn-primary' %>

